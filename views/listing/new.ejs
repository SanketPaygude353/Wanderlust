<% layout("/layouts/boilerplate")%>

<body>
    <div class="row">
        <div class="col-8 offset-3">
            
    <h2 class="pt-2">Create a new Listing</h2>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
           <label for="title" class="form-label">Title</label>
           <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required autocomplete="off">
           <div class="valid-feedback">Title looks good</div>
           <div class="invalid-feedback">Enter the valid Title</div>
        </div>
        
     <div class="mb-3">
        <label for="description" class="form-label">Description</label> 
        <textarea name="listing[description]" placeholder="Enter the description"class="form-control" required  autocomplete="off"></textarea>
        <div class="invalid-feedback">Enter the valid Description</div>
     </div>
       
      <div class="mb-3">
        <label for="image" class="form-label">Upload listing image</label>
        <input type="file" name="listing[image]" placeholder="Enter the Image URL"class="form-control">
        required
      </div>
        
      <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input  name="listing[price]" placeholder="Eg.1200"class="form-control" required  autocomplete="off">
            <div class="invalid-feedback">Please enter the valid Price</div>
          </div>
            
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="Eg.India"class="form-control" required  autocomplete="off">
            <div class="invalid-feedback">Enter the valid Country</div>
            </div>
      </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="A/p....."class="form-control" required  autocomplete="off">
            <div class="invalid-feedback">Enter the valid Location</div>
           </div>
       <br>
        <button class="mb-5 add-btn btn btn-dark">Add</bUtton>
    </form>
</div>
</div>
</body>
